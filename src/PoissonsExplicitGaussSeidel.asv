% Poisson's Equation on a rectangle
% Nidal Kiwai Chaban
% Gauss-Seidel Method
clc
clear all
close all
x=input('Nodes in x: ')
y=input('Nodes in y: ')
u=zeros(x,y);
bx=pi;
ax=-pi;
by=pi;
ay=-pi;

for i=2:x-1
    for j=2:y-1
        u(i,j)=(1/4)*(u(i+1,j)+u(i-1,j)+u(i,j+1)+u(i,j-1));
        u(:,x)=bx;
        u(:,1)=ax;
        u(1,:)=by:
        u(y,:)=ay;
    end
end
xp=1:x;
yp=1:y;
[X,Y]=meshgrid(xp,yp